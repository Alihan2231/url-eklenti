{
  "manifest_version": 3,
  "name": "ViorsLinkScan",
  "description": "URL güvenlik kontrolü yapan, Google Safe Browsing API kullanan bir tarayıcı eklentisi",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://safebrowsing.googleapis.com/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
